      width: 100%;
      height: 100%;
      border-radius: 50%;
      border: 3px solid transparent;
      border-top-color: #16a34a;
      border-right-color: #16a34a;
      border-bottom-color: #16a34a;
      animation: spin 1s linear infinite;
