        (function() {
          var video, fallbackImage;
          
          document.addEventListener('DOMContentLoaded', function() {
            video = document.getElementById('hero-video');
            fallbackImage = document.getElementById('hero-fallback-image');
            
            if (!video || !fallbackImage) return;
            
            // Masquer les contrôles
            video.removeAttribute('controls');
            
            // Tenter l'autoplay
            var playPromise = video.play();
            
            if (playPromise !== undefined) {
              playPromise.then(function() {
                // Autoplay réussi - afficher la vidéo, cacher l'image
                video.style.display = 'block';
                fallbackImage.style.display = 'none';
              }).catch(function(error) {
                // Autoplay échoué (mode économie d'énergie) - garder l'image visible
                video.style.display = 'none';
                fallbackImage.style.display = 'block';
                
                // Ajouter un écouteur pour démarrer la vidéo au clic/touch
                function startVideo() {
                  video.style.display = 'block';
                  fallbackImage.style.display = 'none';
                  video.play().catch(function(err) {
                    console.log('Erreur lecture vidéo:', err);
                  });
                  // Retirer l'écouteur après le premier clic
                  fallbackImage.removeEventListener('click', startVideo);
                  fallbackImage.removeEventListener('touchstart', startVideo);
                }
                
                fallbackImage.addEventListener('click', startVideo);
                fallbackImage.addEventListener('touchstart', startVideo);
              });
            }
          });
        })();
