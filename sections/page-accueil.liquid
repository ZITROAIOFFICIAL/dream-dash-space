        while (true) {
          await runOnce();
          await new Promise(r => setTimeout(r, 2500));
        }
      }

      // Start the simulation when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', loop);
      } else {
        loop();
      }
    })();
