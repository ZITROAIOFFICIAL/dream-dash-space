      window.addEventListener('scroll', handleScroll);
      handleScroll(); // Check initial state
    });

    // Crash Simulation Script
    (function() {
      const MAX_X_DISPLAY = 3;
      const DUR_MIN = 4500;
      const DUR_MAX = 6000;

      let currentX = 1.0;
      let animationId = null;
      let scenario = null;

      const multiplierDisplayCard = document.getElementById('multiplierDisplayCard');
      const multiplierValueCard = document.getElementById('multiplierValueCard');
      const progressBarCard = document.getElementById('progressBarCard');
      const aiChanceDisplayCard = document.getElementById('aiChanceDisplayCard');
      const betStakeCard = document.getElementById('betStakeCard');
      const cashoutContainerCard = document.getElementById('cashoutContainerCard');
      const cashoutValueCard = document.getElementById('cashoutValueCard');

      function money(n) {
        return new Intl.NumberFormat('fr-FR', {
          style: 'currency',
          currency: 'EUR'
        }).format(n);
      }

      function rand(min, max) {
        return Math.random() * (max - min) + min;
      }

      function randInt(min, max) {
        return Math.floor(rand(min, max + 1));
      }

      function newScenario() {
        const chance = rand(60, 90);
        const stake = randInt(15, 120);
        const target = Number(rand(1.2, 2.5).toFixed(2));
        const bust = target + rand(0.2, 1.5);
        const willWin = true;

        return { chance, stake, target, bust, willWin };
      }

      function runOnce() {
        cashoutContainerCard.classList.remove('active');
        
        scenario = newScenario();
        aiChanceDisplayCard.textContent = Math.round(scenario.chance);
        betStakeCard.textContent = money(scenario.stake);

        const duration = rand(DUR_MIN, DUR_MAX);
        const start = performance.now();

        return new Promise((resolve) => {
          function tick(t) {
            const k = Math.min(1, (t - start) / duration);
            const x = 1 + Math.pow(k, 1.4) * (scenario.bust - 1);
            currentX = x;
            
            multiplierValueCard.textContent = x.toFixed(2);
            progressBarCard.style.width = (k * 100) + '%';

