              const win = scenario.stake * scenario.target;
              cashoutValueCard.textContent = money(win);
              cashoutContainerCard.classList.add('active');
              resolve();
              return;
            }
            
            if (x >= scenario.bust) {
              cashoutValueCard.textContent = money(0);
              cashoutContainerCard.classList.add('active');
              resolve();
              return;
            }
            
            animationId = requestAnimationFrame(tick);
          }
          
          animationId = requestAnimationFrame(tick);
        });
      }

