    </div>
  </div>

  <!-- Sticky Footer -->
  <div class="sticky-footer">
    <div class="sticky-footer-content">
      <div class="selected-plan-info">
        <div class="selected-plan-name" id="selected-name">Aucun plan sélectionné</div>
        <div class="selected-plan-price" id="selected-price">Choisissez un plan ci-dessus</div>
      </div>
      <button class="continue-btn" id="continue-btn" disabled>Continuer vers le paiement</button>
    </div>
  </div>

  <!-- Validation Message -->
  <div class="validation-message" id="validation-message">
    Veuillez sélectionner un plan avant de continuer
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const planCards = document.querySelectorAll('.plan-card');
      const continueBtn = document.getElementById('continue-btn');
      const selectedNameEl = document.getElementById('selected-name');
      const selectedPriceEl = document.getElementById('selected-price');
      const validationMessage = document.getElementById('validation-message');
      
      let selectedPlan = null;

      // Handle plan selection
      planCards.forEach(card => {
        card.addEventListener('click', function() {
          // Remove selected class from all cards
          planCards.forEach(c => c.classList.remove('selected'));
          
          // Add selected class to clicked card
          this.classList.add('selected');
          
          // Get plan data
          selectedPlan = {
            type: this.dataset.plan,
            price: this.dataset.price,
            total: this.dataset.total,
            period: this.dataset.period,
            name: this.querySelector('.plan-title').textContent
          };
          
          // Update sticky footer
          selectedNameEl.textContent = selectedPlan.name;
          selectedPriceEl.textContent = `${selectedPlan.price}$ / mois (${selectedPlan.total}$ tous les ${selectedPlan.period})`;
          
          // Enable continue button
          continueBtn.disabled = false;
        });
      });

      // Handle continue button click
      continueBtn.addEventListener('click', function() {
        if (!selectedPlan) {
          // Show validation message
          validationMessage.style.display = 'block';
          setTimeout(() => {
            validationMessage.style.display = 'none';
          }, 3000);
          return;
        }

        // TODO: Redirect to Shopify checkout with variant_id
        // For now, log the selected plan
        console.log('Selected plan:', selectedPlan);
        
        // Example redirect (replace with actual Shopify variant IDs):
        // window.location.href = `/cart/add?id=${variantId}&quantity=1`;
        
        // Temporary: Show alert
        alert(`Plan sélectionné: ${selectedPlan.name}\nPrix: ${selectedPlan.price}$ / mois\nTotal: ${selectedPlan.total}$\n\nRedirection vers le paiement...`);
      });
    });
  </script>
</body>
</html>
