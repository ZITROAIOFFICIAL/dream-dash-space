  {% render 'dashboard-styles' %}
  {% render 'page-accueil-styles' %}
  
  <style>
    .politique-hero {
      position: relative;
      min-height: 40vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #000000;
      overflow: hidden;
    }
    
    .politique-hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: radial-gradient(circle at 50% 50%, rgba(34, 197, 94, 0.1) 0%, transparent 50%);
      pointer-events: none;
    }
    
    .politique-hero-content {
      position: relative;
      z-index: 2;
      text-align: center;
      padding: 3rem 1.5rem;
    }
    
    .politique-title {
      font-family: 'Outfit', sans-serif;
      font-weight: 300;
      font-size: 3rem;
      color: #ffffff;
      margin-bottom: 1rem;
      line-height: 1.2;
    }
    
    .politique-subtitle {
      font-family: 'Fustat', sans-serif;
      font-size: 1.125rem;
      color: rgba(255, 255, 255, 0.7);
      max-width: 600px;
      margin: 0 auto;
    }
    
    .politique-content {
      max-width: 900px;
      margin: 4rem auto;
      padding: 0 1.5rem;
    }
    
    .politique-section {
      background: rgba(39, 39, 42, 0.5);
      border: 1px solid rgba(82, 82, 91, 0.3);
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
      backdrop-filter: blur(10px);
    }
    
    .politique-section h2 {
      font-family: 'Outfit', sans-serif;
      font-weight: 500;
      font-size: 1.5rem;
      color: #ffffff;
      margin-bottom: 1rem;
    }
    
    .politique-section p {
      font-family: 'Fustat', sans-serif;
      font-size: 1rem;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 1rem;
    }
    
    .politique-section p:last-child {
      margin-bottom: 0;
    }
    
    @media (max-width: 768px) {
      .politique-title {
        font-size: 2rem;
      }
      
      .politique-section {
        padding: 1.5rem;
      }
    }
  </style>
</head>
<body>

  <main>
    <!-- Hero Section -->
    <section class="politique-hero">
      <div class="politique-hero-content">
