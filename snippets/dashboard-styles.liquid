{% style %}
/* Hide Shopify default header */
    #shopify-section-header {
      display: none !important;
    }

    /* CSS Variables */
    :root {
      --background: 0 0% 0%;
      --foreground: 0 0% 100%;
      --primary: 120 100% 45%;
      --primary-foreground: 0 0% 100%;
      --secondary: 220 25% 18%;
      --muted: 220 25% 18%;
      --muted-foreground: 220 15% 65%;
      --border: 220 25% 20%;
      --radius: 0.75rem;
      /* Contrôle du déplacement des nav links en scroll - valeurs négatives = monte, positives = descend */
      --nav-scroll-offset: -0.35rem;
      /* Contrôle de la position du logo/badges (valeurs négatives = vers la gauche, positives = vers la droite) */
      --desktop-left-offset: -40rem;
      /* Contrôle de la position des boutons auth (valeurs négatives = vers la gauche, positives = vers la droite) */
      --desktop-right-offset: 39rem;
    }

    /* Reset & Base */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Fustat', sans-serif;
      background: #000000;
      color: #ffffff;
      line-height: 1.5;
      overflow-x: hidden;
    }

    /* Animations */
    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    @keyframes spinVariable {
      0% { transform: rotate(0deg); }
      25% { transform: rotate(180deg); }
      50% { transform: rotate(360deg); }
      75% { transform: rotate(540deg); }
      100% { transform: rotate(720deg); }
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slideIn {
      from { transform: translateX(-100%); }
      to { transform: translateX(0); }
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    .animate-spin {
      animation: spin 1s linear infinite;
    }

    .animate-bounce {
      animation: bounce 1s ease-in-out infinite;
    }

    .animate-fade-in {
      animation: fadeIn 0.3s ease-out;
    }

    .animate-pulse {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    /* Mobile Toggle Button */
    .mobile-toggle {
      position: fixed;
      top: 1.5rem;
      left: 1.5rem;
      z-index: 60;
      background: transparent;
      color: #ffffff;
      border: none;
      cursor: pointer;
      display: none;
      width: 32px;
      height: 32px;
      padding: 0;
    }

    .mobile-toggle:hover {
      background: transparent;
      color: #ffffff;
    }

    .mobile-toggle-icon {
      width: 32px;
      height: 32px;
      position: absolute;
      top: 0;
      left: 0;
    }

    .mobile-toggle .hamburger-icon {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }

    .mobile-toggle .close-icon {
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }

    .mobile-toggle.active .hamburger-icon {
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }

    .mobile-toggle.active .close-icon {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
      color: rgba(255, 255, 255, 0.95);
      stroke: rgba(255, 255, 255, 0.95);
    }
    
    /* Prevent body scroll when sidebar is open */
    body.sidebar-open {
      overflow: hidden;
      position: fixed;
      width: 100%;
      height: 100vh;
      top: 0;
      left: 0;
    }
    
    /* Add black overlay above header when sidebar is open */
    body.sidebar-open::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #000;
      z-index: 35;
      pointer-events: none;
    }
    
    /* Hide header content when sidebar is open */
    body.sidebar-open .header {
      z-index: 100;
    }
    
    body.sidebar-open .header > *:not(.mobile-toggle) {
      display: none !important;
    }
    
    /* Ensure mobile toggle (X) is visible and clickable above everything */
    body.sidebar-open .header .mobile-toggle {
      z-index: 110 !important;
    }
    
    /* Make the X icon visible */
    .mobile-toggle.active .close-icon path {
      stroke: rgba(255, 255, 255, 0.95) !important;
      stroke-width: 1.5 !important;
    }

    @media (max-width: 768px) {
      .mobile-toggle {
        display: block;
        top: 1.25rem; /* Hauteur du menu hamburger */
        left: 1.5rem; /* Position gauche/droite du menu hamburger */
      }
      #online-badge {
        top: 1.75rem !important; /* Hauteur du badge 50 online */
      }
      #maj-badge {
        top: 1.75rem !important; /* Hauteur du badge MAJ IA */
      }
      .logo {
        font-size: 2rem; /* Taille du logo sur mobile */
      }
    }

    /* Overlay */
    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      z-index: 40;
    }

    .overlay.active {
      display: block;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: 50rem;
      min-height: 100vh;
      min-height: 100dvh;
      height: 100%;
      background: #000000;
      border-right: 1px solid rgba(255, 255, 255, 0.1);
      z-index: 50;
      display: none; /* Hidden on desktop */
      flex-direction: column;
      overflow-y: auto;
      touch-action: pan-y;
      -webkit-overflow-scrolling: touch;
    }

    @media (min-width: 769px) {
      .sidebar {
        display: none !important;
      }
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 100%;
        display: none;
      }

      .sidebar.active {
        display: flex;
      }
    }

    /* Desktop Menu */
    .desktop-menu {
      display: none;
      transition: all 0.3s ease; /* Transition fluide pour le scroll */
    }

    @media (min-width: 769px) {
      .desktop-menu {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem 2rem 0 2rem;
        height: 100%;
      }

      /* Header en mode scroll - tout descend ensemble */
      .desktop-menu.scrolled {
        padding-top: 3.5rem; /* Augmente le padding pour descendre tout le contenu */
      }

      .mobile-only {
        display: none !important;
      }

      .mobile-toggle {
        display: none !important;
      }
    }

    .desktop-left {
      display: flex;
      align-items: center;
      gap: 2rem;
      margin-left: var(--desktop-left-offset, 5rem);
      transition: all 0.3s ease; /* Transition fluide */
    }

    .desktop-right {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      transition: all 0.3s ease; /* Transition fluide */
      transform: translateX(var(--desktop-right-offset, 10rem));
    }

    /* État scrolled - tout le header descend */
    .header.scrolled .desktop-menu {
      padding-top: 3.5rem;
    }

    .header.scrolled .desktop-nav {
      /* Contrôle du déplacement des nav links en scroll - valeurs négatives = monte, positives = descend */
      transform: translateX(-50%) translateY(var(--nav-scroll-offset, 2rem));
    }

    .header.scrolled .desktop-left,
    .header.scrolled .desktop-right {
      padding-top: 4.25rem; /* Badges, logo et boutons descendent plus */
    }

    .desktop-logo {
      font-family: 'Outfit', sans-serif;
      font-size: 3rem;
      letter-spacing: -0.02em;
      font-weight: 300;
      display: inline-flex;
      align-items: baseline;
      margin-top: -1rem;
    }

    .desktop-badge-online,
    .desktop-badge-ia {
      position: relative;
      display: flex;
      align-items: center;
      gap: 0.25rem;
      padding: 0.25rem 0.4rem;
      background: rgba(255, 255, 255, 0.02);
      border-radius: 9999px;
      z-index: 2;
    }

    .desktop-nav {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      align-items: center;
      gap: 2rem;
    }

    .desktop-nav-item {
      color: #ffffff;
      text-decoration: none;
      font-family: 'Fustat', sans-serif;
      font-size: 1.35rem; /* Réduit de 1.6rem */
      font-weight: 400;
      transition: color 0.2s;
      padding-top: 1rem;
      cursor: pointer !important;
    }

    .desktop-nav-item:hover {
      color: rgba(255, 255, 255, 0.7);
      cursor: pointer !important;
    }

    .desktop-auth-link {
      color: #ffffff;
      text-decoration: none;
      font-family: 'Outfit', sans-serif;
      font-size: 1.35rem; /* Réduit de 1.6rem */
      font-weight: 300;
      transition: color 0.2s;
      margin-right: 0rem;
    }

    .desktop-auth-link:hover {
      color: rgba(255, 255, 255, 0.9);
    }

    .desktop-auth-btn {
      padding: 1.1rem 1.65rem; /* Réduit de 1.3rem 1.95rem */
      background: #ffffff;
      border: none;
      border-radius: 16px;
      color: #000000;
      font-family: 'Outfit', sans-serif;
      font-weight: 300;
      font-size: 1.2rem; /* Réduit de 1.38rem */
      text-align: center;
      text-decoration: none;
      transition: all 0.3s;
      display: block;
    }

    .desktop-auth-btn:hover {
      background: rgba(255, 255, 255, 0.95);
    }

    .sidebar-header {
      padding: 1.5rem 1rem 1rem;
    }

    .logo {
      font-family: 'Outfit', sans-serif;
      font-size: 2.5rem;
      font-weight: 300;
      text-align: center;
      line-height: 1;
    }

    .logo .text-foreground {
      color: #ffffff;
    }

    .logo .text-primary {
      color: #ffffff;
    }

    .logo .text-sm {
      font-size: 0.875rem;
      margin-left: -0.15em;
    }

    .sidebar-nav {
      flex: 1;
      overflow-y: auto;
      padding: 0;
    }
    
    /* Add spacing between mobile header and nav links */
    @media (max-width: 768px) {
      .sidebar-nav {
        padding-top: 5rem;
      }
    }

    /* Auth Buttons */
    .auth-btn-gray {
      width: 100%;
      padding: 1.3rem 1.95rem;
      background: rgba(39, 39, 42, 1);
      border: 2px solid rgba(82, 82, 91, 0.5);
      border-radius: 6px;
      color: rgba(255, 255, 255, 0.9);
      font-family: 'Outfit', sans-serif;
      font-weight: 300;
      font-size: 1.38rem;
      text-align: center;
      text-decoration: none;
      transition: all 0.3s;
      display: block;
    }

    .auth-btn-gray:hover {
      background: rgba(52, 52, 58, 1);
      border-color: rgba(82, 82, 91, 0.7);
    }

    .auth-btn-white {
      width: 100%;
      padding: 1.3rem 1.95rem;
      background: #ffffff;
      border: none;
      border-radius: 6px;
      color: #000000;
      font-family: 'Outfit', sans-serif;
      font-weight: 300;
      font-size: 1.38rem;
      text-align: center;
      text-decoration: none;
      transition: all 0.3s;
      display: block;
    }

    .auth-btn-white:hover {
      background: rgba(255, 255, 255, 0.95);
    }

    .nav-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.65rem;
      padding: 1.625rem 1.95rem;
      margin: 0;
      color: rgba(161, 161, 170, 1);
      text-decoration: none;
      border-bottom: 1px solid rgba(39, 39, 42, 1);
      transition: all 0.2s;
      cursor: pointer !important;
      font-family: 'Outfit', sans-serif;
      font-size: 1.6rem;
      font-weight: 300;
      background: transparent;
    }

    .nav-item span {
      flex: 1;
      text-align: left;
      font-size: 1.5rem;
      font-weight: 300;
    }

    .nav-item *, .nav-item *:hover {
      cursor: pointer !important;
    }

    .nav-item-content {
      display: flex;
      align-items: center;
      gap: 1.3rem;
      flex: 1;
    }

    .nav-item:hover {
      background: rgba(255, 255, 255, 0.02);
    }

    .nav-item.active {
      background: transparent;
      color: rgba(161, 161, 170, 1);
    }

    .nav-icon {
      width: 1.75rem;
      height: 1.75rem;
      flex-shrink: 0;
    }

    .nav-icon-small {
      width: 1.5rem;
      height: 1.5rem;
      flex-shrink: 0;
    }

    .chevron-icon {
      width: 1.625rem;
      height: 1.625rem;
      flex-shrink: 0;
      margin-left: auto;
    }
    
    /* Cacher le chevron au survol sur desktop et laptop */
    @media (min-width: 769px) {
      .nav-item:hover .chevron-icon {
        opacity: 0;
        transition: opacity 0.2s;
      }
    }

    .sidebar-footer {
      padding: 1.5rem 1rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      text-align: center;
      font-size: 0.75rem;
      color: rgba(255, 255, 255, 0.6);
    }

    /* Ajustement hauteur ligne verte sidebar (desktop only) */
    @media (min-width: 769px) {
      .sidebar .header-ai-update {
        padding: 0.75rem 0 0.75rem 1rem !important;
      }
      
      /* Augmenter taille texte sidebar sur desktop uniquement */
      .sidebar .header-ai-update .ai-update-text,
      .sidebar .header-ai-update span {
        font-size: 1.25rem !important;
      }
    }

    /* AI Update Indicator */
    .ai-update-indicator {
      background: #000000;
      padding: 0.75rem 1rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .ai-update-indicator svg {
      color: #ffffff !important;
      stroke: #ffffff !important;
    }

    .ai-spinner {
      position: relative;
      width: 2.4rem;
      height: 2.4rem;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: center;
    }

/* Spinner supprimé - remplacé par l'icône SVG atomique */

    .ai-badge {
      position: relative;
      color: #ffffff;
      font-weight: 300;
      font-size: 10px;
      line-height: 1;
      z-index: 10;
    }

    .ai-update-text {
      color: rgba(255, 255, 255, 0.7);
      font-size: 0.875rem;
    }

    /* Badge MAJ avec animation de lumière */
    .maj-badge-animated {
      position: relative;
      overflow: visible !important;
    }

    .maj-badge-animated::before {
      content: '';
      position: absolute;
      inset: -2px;
      border-radius: 9999px;
      padding: 2px;
      background: conic-gradient(
        from 0deg,
        transparent 0deg,
        transparent 270deg,
        rgba(255, 255, 255, 0.8) 300deg,
        rgba(255, 255, 255, 1) 330deg,
        rgba(255, 255, 255, 0.8) 360deg,
        transparent 360deg
      );
      -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      animation: rotateBorder 4s linear infinite;
      pointer-events: none;
    }

    @keyframes rotateBorder {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    /* Header */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background: transparent;
      z-index: 1000;
      display: flex;
      flex-direction: column;
      transform: translateZ(0);
      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
    }

    /* Header background effect */
    .header::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) translateZ(0);
      width: 0;
      height: 0;
      background: rgba(255, 255, 255, 0.10);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border-radius: 8px;
      opacity: 0;
      transition: width 0.2s ease, height 0.2s ease, opacity 0.2s ease;
      pointer-events: none;
      z-index: -1;
      backface-visibility: hidden;
    }

    .header.scrolled::before {
      width: calc(100% - 3rem);
      height: 70%;
      opacity: 1;
    }

    /* Laptop only (769px - 1440px) - Rectangle gris très large */
    @media (min-width: 769px) and (max-width: 1440px) {
      .header.scrolled::before {
        width: calc(100% - 2rem) !important;  /* Presque toute la largeur */
        height: 55%;
        top: 58%;
      }
    }

    /* Desktop large écran only (>1440px) - Rectangle gris normal */
    @media (min-width: 1441px) {
      .header.scrolled::before {
        width: calc(100% - 10rem);
        height: 55%;
        top: 58%;
      }
    }

    /* Transitions for elements */
    #online-badge-container,
    #maj-badge-container,
    .mobile-toggle {
      transition: left 0.2s ease, top 0.2s ease;
      transform: translateZ(0);
      backface-visibility: hidden;
    }

    /* Scrolled state - move elements closer to center and adjust vertical position */
    @media (max-width: 768px) {
      .header.scrolled .mobile-toggle {
        left: 2rem !important;
        top: 2.50rem !important;
      }

      .header.scrolled #online-badge-container {
        left: 23% !important;
        top: 1.45rem !important;
      }

      .header.scrolled #maj-badge-container {
        left: 83% !important;
        top: 2.70rem !important;
      }
      
      .header.scrolled .logo {
        top: 2rem !important;
      }
    }

    .header-logo {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
      background: transparent;
    }

    .header-ai-update {
      background: transparent;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: 0.5rem;
    }

    .header-ai-update svg {
      color: #177546 !important;
      stroke: #177546 !important;
    }

    @media (min-width: 768px) {
      .header {
        left: 0;
      }
    }

    /* Augmenter taille texte header sur desktop uniquement */
    @media (min-width: 769px) {
      .header-ai-update .ai-update-text,
      .header-ai-update span {
        font-size: 1.25rem !important;
      }
    }

    /* Main Content */
      .main-content {
        margin-left: 0;
        min-height: 100vh;
        padding-top: 110px;
        background: #000000;
      }

    @media (max-width: 768px) {
      .main-content {
        margin-left: 0;
      }
    }


    .container {
      padding: 2rem;
    }

    @media (max-width: 768px) {
      .container {
        padding: 1.5rem;
      }
    }

    /* Page */
    .page {
      display: none;
    }

    .page.active {
      display: block;
      animation: fadeIn 0.3s ease-out;
    }

    /* Typography */
    h1 {
      font-size: 4.5rem;
      font-weight: 300;
      margin-bottom: 1rem;
      color: #ffffff;
      text-align: center;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: 300;
      margin-bottom: 1rem;
    }

    h3 {
      font-size: 1.25rem;
      font-weight: 300;
      margin-bottom: 0.5rem;
    }

    .subtitle {
      color: #ffffff;
      margin-bottom: 2rem;
      text-align: center;
      font-size: 1.5rem;
      max-width: 95%;
      margin-left: auto;
      margin-right: auto;
    }

    /* Card */
    .card {
      background: #000000;
      border: 1px solid rgba(255, 255, 255, 0.15);
      border-radius: 0.125rem;
      padding: 1rem;
      margin-bottom: 1.5rem;
      max-width: 22rem;
      margin-left: auto;
      margin-right: auto;
    }

    /* Bet Card */
    .bet-card {
      background: #000000;
      border: 1px solid rgba(255, 255, 255, 0.15);
      border-radius: 1rem;
      padding: 0;
      margin-bottom: 3.5rem;
      max-width: 28rem;
      margin-left: auto;
      margin-right: auto;
      overflow: hidden;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    @media (max-width: 768px) {
      .bet-card {
        max-width: 88% !important;
      }
    }

    .bet-card-header {
      padding: 0;
    }

    /* AI Counter Section - Above Card */
    .ai-counter-above {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      padding: 0.5rem 1.5rem;
      margin-bottom: 0.5rem;
      background: transparent;
    }

    .ai-counter-above .ai-spinner {
      position: relative;
      width: 2.4rem;
      height: 2.4rem;
      flex-shrink: 0;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Spinner supprimé - icône SVG atomique uniquement */

    .ai-counter-above .ai-badge {
      position: relative;
      color: #ffffff;
      font-weight: 300;
      font-size: 10px;
      line-height: 1;
      z-index: 10;
    }

    .ai-counter-above span {
      color: #ffffff;
      font-weight: 300;
      font-size: 10px;
      letter-spacing: 0.025em;
    }

    /* AI Counter Section */
    .ai-counter {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      padding: 0.5rem 1rem;
      background: rgba(0, 0, 0, 0.6);
      border-top: 1px solid rgba(255, 255, 255, 0.15);
      border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    }

    .ai-counter span {
      color: #ffffff;
      font-weight: 300;
      font-size: 10px;
      letter-spacing: 0.025em;
    }

    /* Confidence Badge - Bande verte 92% */
    .confidence-badge {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      padding: 0.75rem 1.52rem;
      background: rgba(0, 0, 0, 0.6);
    }

    .confidence-left {
      display: flex;
      align-items: center;
      gap: 0;
      flex: 1;
    }

    .confidence-badge span {
      color: #ffffff;
      font-weight: 300;
    }

    .confidence-percentage {
      font-size: 3.2rem;
      line-height: 1;
      font-weight: 300;
      flex-shrink: 0;
    }

    .confidence-text {
      font-size: 13px;
      font-weight: 300;
      line-height: 1.5;
      text-align: center;
      flex: 1;
      padding: 0rem;
    }

    /* Bouton Voir Analyse IA */
